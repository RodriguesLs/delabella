<div class="nested-fields">
    <div class="field">
        <%= f.label :product_id %>
        <%= f.select("product_id", Product.all.collect {|p| [ p.name, p.id ] }, { include_blank: true })%>
        <%= f.label :quantity %>
        <%= f.number_field :quantity %>
