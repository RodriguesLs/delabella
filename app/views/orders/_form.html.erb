<%= form_for(order) do |f| %>
  <% if order.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(order.errors.count, "error") %> prohibited this order from being saved:</h2>

      <ul>
      <% order.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :table %>
    <%= f.number_field :table %>
  </div>

  <div class="field">
    <%= f.label 'Products' %>
    <%# aqui é um checkbox normal só que dentro de um for que passa por todos os produtos para poder listar todos os produtos disponiveis %>
    <% Product.all.each do |product| %>
      <label>  
        <%= check_box :order, :product_ids, { multiple: true }, product.id %>
        <%= product.name %>
      </label>
        <%= number_field :orders_products, :quantity %>
    <% end %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
