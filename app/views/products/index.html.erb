<h1 class="h1-new">Produtos</h1>
<form class="form-content">
<table>
  <thead>
    <tr>
      <th class="th-index space">Nome</th>
      <th class="th-index">Preço</th>
      <th colspan="10" class="space"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
          <td class="space"><%= product.name %></td>
          <td><%= humanized_money_with_symbol(product.price) %></td>
            <td class="space-b"><%= link_to 'Show', product %></td>
            <td><%= link_to 'Edit', edit_product_path(product) %></td>        
      </tr>
    <% end %>
  </tbody>
</table>
<br>
<%= link_to 'Novo Produto', new_product_path, class: "btn" %>
<%= link_to 'Página Principal', root_path, class: "btn" %>
</form>
